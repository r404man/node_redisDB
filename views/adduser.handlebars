<h1>Add user</h1>
{{#if error}} , <span>{{error}}</span> {{/if}}
<form action="/user/add" method="POST" class="form-flex">
    {{!-- <input type="hidden" name="_method" value="PUT"> --}}
    <div class="form-group">
        <label for="">ID</label>
        <input class="form-control" type="text" name="id" placeholder="Add id">
    </div>
    <div class="form-group">
        <label for="">first_name</label>
        <input class="form-control" type="text" name="first_name" placeholder="Add first_name">
    </div>
    <div class="form-group">
        <label for="">last_name</label>
        <input class="form-control" type="text" name="last_name" placeholder="last_name id">
    </div>
    <div class="form-group">
        <label for="">email</label>
        <input class="form-control" type="text" name="email" placeholder="email">
    </div>
    <div class="form-group">
        <label for="">phone</label>
        <input class="form-control" type="text" name="phone" placeholder="phone">
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
</form>